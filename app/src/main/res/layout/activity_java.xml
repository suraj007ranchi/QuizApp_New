<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20sp"
    tools:context=".JavaActivity">

    <LinearLayout
        android:padding="10sp"
        android:orientation="vertical"
        android:layout_margin="10sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessLeaf">

        <TextView
            android:id="@+id/textView6"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer Carefully" />

        <TextView
            android:id="@+id/java_que"
            android:layout_margin="5sp"
            android:padding="5sp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question" />

        <TextView
            android:id="@+id/java_opt1"
            android:layout_margin="5sp"
            android:textSize="17sp"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option1" />

        <TextView
            android:id="@+id/java_opt2"
            android:layout_margin="5sp"
            android:textSize="17sp"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option2" />

        <TextView
            android:id="@+id/java_opt3"
            android:layout_margin="5sp"
            android:textSize="17sp"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option3" />

        <TextView
            android:id="@+id/java_opt4"
            android:layout_margin="5sp"
            android:textSize="17sp"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option4" />

        <TextView
            android:id="@+id/java_opt5"
            android:layout_margin="5sp"
            android:textSize="17sp"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer" />

        <LinearLayout
            android:layout_margin="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/java_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Previous" />

            <Button
                android:id="@+id/java_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Next" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>