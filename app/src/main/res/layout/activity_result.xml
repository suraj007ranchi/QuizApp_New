<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10sp"
    tools:context=".ResultActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10sp"
        android:padding="10sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Final Result"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/user_logo"
                android:layout_width="50sp"
                android:layout_height="50sp"/>
            <TextView
                android:id="@+id/res_username"
                android:layout_gravity="center"
                android:gravity="end"
                android:text="@string/username"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:background="@drawable/circular_box"
            android:orientation="vertical"
            android:layout_marginTop="50sp"
            android:layout_width="350sp"
            android:layout_height="350sp">

            <TextView
                android:layout_marginTop="110sp"
                android:padding="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/your_score"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/res_score"
                android:padding="10sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/result"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/outline_autoplay_24"
                android:layout_width="80sp"
                android:layout_height="80sp"/>
            <TextView
                android:text="@string/replay"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:padding="10sp"
            android:layout_marginTop="120sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/outline_home_24"
                        android:layout_gravity="center"
                        android:layout_width="60sp"
                        android:layout_height="60sp"/>
                    <TextView
                        android:text="HOME"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/outline_category_24"
                        android:layout_gravity="center"
                        android:layout_width="60sp"
                        android:layout_height="60sp"/>
                    <TextView
                        android:text="@string/category"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/outline_ios_share_24"
                        android:layout_gravity="center"
                        android:layout_width="60sp"
                        android:layout_height="60sp"/>
                    <TextView
                        android:text="@string/share"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>